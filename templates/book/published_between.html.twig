{# templates/books/published_between.html.twig #}

<h1>Books Published Between 2014 and 2019</h1>

<table border=1>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Publication Date</th>
            <th>Is Published</th>
        </tr>
    </thead>
    <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author.username }}</td>
                <td>{{ book.category }}</td>
                <td>{{ book.publicationDate|date('Y-m-d') }}</td>
                <td>{{ book.isPublished }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No books found in this date range.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
