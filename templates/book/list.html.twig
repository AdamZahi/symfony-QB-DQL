<h1>list of books</h1>
<form method="get" action="{{ path('book_search') }}">
    <input type="number" name="ref" placeholder="Reference" required>
    <button type="submit">Search</button>
</form>
<table border="1">
    <tr>
        <th>Username</th>
        <th>Publication date</th>
        <th>published</th>
        <th>Category</th>
        <th>author</th>
        <th>Action</th>
    </tr>
    {% for book in list %}
    <tr>
        <td><b>{{book.title}}</b></td>
        <td>{{ book.publicationDate|date('Y-m-d') }}</td> 
        <td>{{book.published}}</td>
        <td>{{book.category}}</td>
        <td>{{book.author.username}}</td>
        <td>
            <a href="">Edit</a>
            <a href="">Delete</a> 
        
        </td>
    </tr>
    {% endfor %}
</table>
